<script>
    var isShown = false;

    function displayItems() {
        const displayHere = document.getElementById('displayHere');

        if (isShown) {
            isShown = false;
            displayHere.style.display = "none";
        } else {
            isShown = true;
            displayHere.style.display = "block";

            // Fetch items from local storage
            const getItem = localStorage.getItem('key');
            let array = [];

            if (getItem) {
                try {
                    array = JSON.parse(getItem);
                    if (!Array.isArray(array)) {
                        array = [];
                    }
                } catch (e) {
                    array = [];
                }
            }

            // Clear previous content
            displayHere.innerHTML = '';

            // Generate HTML for each item
            array.forEach(item => {
                const itemHTML = `
                <div class="cart-item my-4 p-4 bg-gray-200 rounded-lg shadow-md flex items-center">
                    <img src="${item.image}" alt="${item.name}" class="w-20 h-20 object-cover rounded-lg" />
                    <div class="ml-4">
                        <p class="font-medium text-gray-900">${item.name}</p>
                        <p class="text-gray-700">${item.price}</p>
                    </div>
                </div>
            `;
                displayHere.innerHTML += itemHTML;
            });
        }
    }

    function clearCart() {
        // Clear items from local storage
        localStorage.removeItem('key');

        // Clear displayHere section
        const displayHere = document.getElementById('displayHere');
        displayHere.innerHTML = '';
    }

</script>